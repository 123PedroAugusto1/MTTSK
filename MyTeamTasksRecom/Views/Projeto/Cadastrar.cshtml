@model Projeto
@{

    Layout = "~/Views/Shared/LayoutGestor.cshtml";

}

<form asp-action="Cadastrar" method="post">
    <fieldset>
        <legend>Cadastrar Projeto</legend>
        <div asp-validation-summary="ModelOnly"
             class="text-primary"></div>

        <div class="form-group" id="Nome">
            <label asp-for="Nome"></label>
            <input type="text" asp-for="Nome"
                   class="form-control" />
            <span asp-validation-for="Nome"
                  class="text-primary"></span>
        </div>
        <div id="Cliente" class="form-group">
            <label>Cliente:</label>
            <select asp-items="@ViewBag.Clientes"
                    class="form-control" name="idCliente">
                <option> -- SELECIONE -- </option>
            </select>
        </div>
        <div class="form-group" id="Nome">
            <label asp-for="Status"></label>
            <input type="text" asp-for="Status"
                   class="form-control" />
            <span asp-validation-for="Status"
                  class="text-primary"></span>
        </div>

        <input type="submit" class="btn btn-success"
               value="Cadastrar" />
    </fieldset>
</form>


