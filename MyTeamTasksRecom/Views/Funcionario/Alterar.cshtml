@model Funcionario
@{

    Layout = "~/Views/Shared/LayoutProjeto.cshtml";

}

<form asp-action="Alterar" method="post">


    <fieldset>
        <legend>Alterar Funcionario</legend>

        <input type="hidden" asp-for="PessoaId" />
        <div class="form-group">
            <label>Id:</label>
            <input type="text" asp-for="PessoaId"
                   readonly="" class="form-control" />
        </div>
        <div asp-validation-summary="ModelOnly"
             class="text-primary"></div>
        <div class="form-group" id="Nome">
            <label asp-for="Nome"></label>
            <input type="text" asp-for="Nome"
                   class="form-control" />
            <span asp-validation-for="Nome"
                  class="text-primary"></span>
        </div>
        <div id="Cargo" class="form-group">
            <label>Categoria:</label>
            <select asp-for="Cargo" class="form-control" name="Cargo">
                <option value="0"> -- SELECIONE -- </option>
                <option value="1">Administrador</option>
                <option value="2"> Gestor de projetos</option>
                <option value="3"> Desenvolvedor </option>
            </select>
        </div>
        <div class="form-group" id="login">
            <label asp-for="Login"></label>
            <input type="text" asp-for="Login"
                   class="form-control" />
            <span asp-validation-for="Login"
                  class="text-primary"></span>
        </div>
        <div class="form-group" id="senha">
            <label asp-for="Senha"></label>
            <input type="password" asp-for="Senha"
                   class="form-control" />
            <span asp-validation-for="Senha"
                  class="text-primary"></span>
        </div>


        <input type="submit" class="btn btn-success"
               value="Cadastrar" />
    </fieldset>
</form>