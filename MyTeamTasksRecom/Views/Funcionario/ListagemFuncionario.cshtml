
@{
    List<Funcionario> funcionarios = ViewBag.Funcionarios;
    Layout = "~/Views/Shared/LayoutAdm.cshtml";
    string cargo = "";
    string status = "";
}


<div class="container" style="margin-top:30px;margin-bottom:30px">
    <h2>Gerenciamento</h2>
    <a asp-action="Cadastrar" class="btn btn-primary">Cadastrar</a>
    <br /><br />
    <table class="table table-hover">
        <thead>
            <tr>
                <th width="101">Nome:</th>
                <th width="101">Cargo:</th>
                <th width="101">Status:</th>
                <th width="101"></th>

            </tr>
        </thead>
        <tbody>
            @foreach (Funcionario funcionario in funcionarios)
            {
            <tr>
                <td>@funcionario.Nome</td>
                @if (funcionario.Cargo == 1)
                {
                    cargo = "Administrador";
                }
                else if (funcionario.Cargo == 2)
                {
                    cargo = "Gestor";
                }
                else if (funcionario.Cargo == 3)
                {
                    cargo = "Desenvolvedor";
                }
                <td>@cargo</td>
                @if (funcionario.Status == 0)
                {
                    status = "Inativo";
                }
                else 
                {
                    status = "Ativo";
                }
                <td>@status</td>
                <td>
                    <a asp-action="Remover" asp-route-id="@funcionario.PessoaId">Remover</a>
                    <a asp-action="Alterar" asp-route-id="@funcionario.PessoaId">Alterar</a>
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>


