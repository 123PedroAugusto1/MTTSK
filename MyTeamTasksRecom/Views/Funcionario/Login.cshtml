@model Funcionario
@{
    Layout = "~/Views/Shared/LayoutLogin.cshtml";

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div class="box-parent-login">
        <div class="well bg-white box-login">
            <h1 class="ls-login-logo">My Team Tasks</h1>
            <form asp-action="Login" method="post">
                <fieldset>

                    <div class="form-group ls-login-password">
                        <label asp-for="Login">Login</label>
                        <input type="Text"
                               asp-for="Login"
                               class="form-control ls-login-bg-password input-lg"
                               aria-label="Login"
                               placeholder="Login">

                    </div>

                    <div class="form-group ls-login-password">
                        <label asp-for="Senha">Senha</label>
                        <input type="text"
                               asp-for="Senha"
                               class="form-control ls-login-bg-password input-lg"
                               aria-label="Senha"
                               placeholder="Senha">

                    </div>

                    <input type="submit" class="btn btn-success"
                           value="Entrar" />

                </fieldset>
            </form>
        </div>
    </div>
</body>
</html>
