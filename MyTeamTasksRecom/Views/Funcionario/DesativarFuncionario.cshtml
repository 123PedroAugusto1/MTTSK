@model Funcionario
@{
    Layout = "~/Views/Shared/LayoutAdm.cshtml"; 
}

    <form>
        <fieldset>
            <legend>Dados do Endereço</legend>
            <div asp-validation-summary="ModelOnly"
                 class="text-primary"></div>
            <div class="form-group">
                <label asp-for="Login"></label>
                <input type="text" asp-for="Login"
                       class="form-control" />
            </div>
            <input type="submit" class="btn btn-info"
                   value="Buscar" asp-controller="Funcionario"
                   asp-action="BuscarFuncionarioPorLogin" />
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input type="text" asp-for="Nome"
                       class="form-control" readonly="" />
            </div>
            <input type="submit" class="btn btn-info"
                   value="Desativar" asp-controller="Funcionario"
                   asp-action="Desativar" />

        </fieldset>
    </form>

