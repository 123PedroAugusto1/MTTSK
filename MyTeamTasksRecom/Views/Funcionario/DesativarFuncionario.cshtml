@model Funcionario
@{
    Layout = "~/Views/Shared/LayoutAdm.cshtml"; ;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DesetivarFuncionario</title>
</head>
<body>
    <form>
        <fieldset>
            <legend>Dados do Endereço</legend>
            <div asp-validation-summary="ModelOnly"
                 class="text-primary"></div>
            <div class="form-group">
                <label asp-for="Login"></label>
                <input type="text" asp-for="Login"
                       class="form-control" />
            </div>
            <input type="submit" class="btn btn-info"
                   value="Buscar" asp-action="BuscarPorLogin"
                   asp-controller="Funcionario" />
            <div class="form-group">
                <label asp-for="Nome"></label>
                <input type="text" asp-for="Nome"
                       class="form-control" readonly="" />
            </div>
       
        </fieldset>
    </form>
</body>
</html>
