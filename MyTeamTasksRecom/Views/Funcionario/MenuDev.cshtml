
@{
    Layout = "~/Views/Shared/LayoutDev.cshtml";
    List<Tarefa> tarefas = ViewBag.Tarefa;
}

<div class="container" style="margin-top:30px;margin-bottom:30px">
<h2>Listagem Tarefas</h2>
<br /><br />
<div asp-validation-summary="ModelOnly"
     class="text-primary"></div>
<table class="table table-hover">
    <thead>
        <tr>
            <th width="101">Nome:</th>

            <th width="50"></th>
            <th width="50">Status:</th>

        </tr>
    </thead>
    <tbody>
        @foreach (Tarefa tarefa in tarefas)
        {
            <tr>
                <td>@tarefa.Titulo</td>
                <td>@tarefa.Prioridade</td>
                <td>@tarefa.Status</td>
                <td>
                    <a asp-controller="Tarefa" asp-action="VerTarefa2" asp-route-id="@tarefa.TarefaId">Ver tarefa </a>

                </td>

            </tr>
        }

    </tbody>
</table>
</div>
